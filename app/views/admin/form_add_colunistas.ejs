<%- include('../includes/topo') %>	
<div class="container">
    <h1>Adicionar Colunista</h1>
    <%if(validacao.length > 0){%>
        <div class="row">
            <div class="col-md-12">
            <div class="alert alert-danger">
                <strong>Atenção!</strong>
                <ul>
                    <% for(var i = 0; i< validacao.length; i++){ %>
                        <li><%=validacao[i].msg%></li>
                    <%}%>	
                </ul>
            </div>
            </div>
        </div>
    <%}%>
    <form action="/colunistas/salvar" method="POST">
        <div class="form-group">
            <label for="nome">Nome colunista</label>
            <input type="text" name="nome" id="nome" value="<%=colunista.nome%>" class="form-control">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" value="<%=colunista.email%>" class="form-control">
        </div>
        <div class="form-group">
            <label for="curriculo">Curriculo</label>
            <textarea name="curriculo" id="curriculo" cols="30" rows="10"
                class="form-control"><%=colunista.curriculo%></textarea>
        </div>
        <input type="submit" value="Cadastrar colunista" class="btn btn-primary">
    </form>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>

</html>